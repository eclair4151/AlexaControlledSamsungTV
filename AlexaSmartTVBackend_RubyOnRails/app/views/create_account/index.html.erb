<div class="container page-color">
  <div class="base-color">
    <h1>
      Create Account
    </h1>
  </div>
  <div class="panel panel-default container-color col-sm-6 col-sm-offset-3" style="margin-top: 20px">
    <form action="/create_account"  name="createForm"  class="panel-body panel-container" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-group" style="margin: 15px">
        <label for="first">First Name:</label>
        <input type="text" class="form-control" id="first"  name="first_name" required>
      </div>
      <div class="form-group" style="margin: 15px">
        <label for="last_name">Last Name:</label>
        <input type="text" class="form-control" id="last_name" name="last_name" required>
      </div>
      <div class="form-group" style="margin: 15px">
        <label for="usr">Email:</label>
        <input type="email" class="form-control"  id="usr" name="email" required>
      </div>
      <div class="form-group" style="margin: 15px">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="password" pattern=".{8,}" title="8 characters minimum" required>
      </div>
      <div class="form-group" style="margin: 15px">
        <label for="c_password">Confirm Password:</label>
        <input type="password" class="form-control" id="c_password" name="c_password" pattern=".{8,}" title="8 characters minimum" required>
      </div>
      <button type="submit" class="btn btn-default base-color" style="float:right; margin:15px;">CREATE ACCOUNT</button>
    </form>
    <p id="error"  style="color:red"><%= flash[:error] %></p>
    <a href="/login">Already have an account? Login Here.</a>

  </div>
</div>