<div class="container page-color">
  <div class="base-color">
    <h1>
      FORGOT PASSWORD
    </h1>
  </div>
  <div class="panel panel-default container-color col-sm-6 col-sm-offset-3" style="margin-top: 20px">
    <form name="loginForm" action="/forgot_password" class="panel-body panel-container" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-group" style="margin: 15px">
        <label for="usr">Email:</label>
        <input type="email" class="form-control" id="usr" name="email" required>
      </div>
      
      <button type="submit" class="btn btn-default base-color" style="float:right; margin:15px;">RESET</button>
      <p id="error"  style="color:red"><%= flash[:error] %></p>
      <p id="message"  style="color:green"><%= flash[:message] %></p>

      <a href="/login">Back</a>
    </form>
  </div>
</div>